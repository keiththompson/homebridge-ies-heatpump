{
  "pluginAlias": "IESHeatPump",
  "pluginType": "platform",
  "singular": true,
  "strictValidation": true,
  "schema": {
    "type": "object",
    "required": ["name", "deviceId", "username", "password"],
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "IES Heat Pump",
        "description": "The name that will appear in HomeKit"
      },
      "deviceId": {
        "title": "Device ID",
        "type": "string",
        "description": "Your IES heat pump device ID (found in the monitoring URL)",
        "placeholder": "999"
      },
      "username": {
        "title": "Username",
        "type": "string",
        "format": "email",
        "description": "Your IES Heat Pumps account email address"
      },
      "password": {
        "title": "Password",
        "type": "string",
        "description": "Your IES Heat Pumps account password"
      },
      "pollingInterval": {
        "title": "Polling Interval (seconds)",
        "type": "integer",
        "default": 60,
        "minimum": 30,
        "maximum": 3600,
        "description": "How often to fetch temperature data from the API"
      }
    }
  },
  "layout": [
    {
      "type": "fieldset",
      "title": "Device Configuration",
      "items": ["deviceId"]
    },
    {
      "type": "fieldset",
      "title": "Account Credentials",
      "items": [
        "username",
        {
          "key": "password",
          "type": "password"
        }
      ]
    },
    {
      "type": "fieldset",
      "title": "Advanced Settings",
      "expandable": true,
      "expanded": false,
      "items": ["pollingInterval"]
    }
  ]
}
